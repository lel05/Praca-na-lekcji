<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pracanalekcji.Views.Login_Page" BackgroundColor="#3e3e3e" NavigationPage.HasNavigationBar="False">
    
    <StackLayout Margin="15,25,15,8">
        <Label Text="Login:" HorizontalOptions="Center" FontSize="25" TextColor="White"/>
        <Entry x:Name="loginEntry" TextColor="LightGray" WidthRequest="200"/>
        <Label Text="Haslo:" FontSize="25" TextColor="White" HorizontalOptions="Center"/>
        <Entry x:Name="passwordEntry" IsPassword="True" TextColor="LightGray" WidthRequest="200"/>

        <Button Text="zaloguj" BackgroundColor="#3Fc0b2" FontAttributes="Bold" Clicked="Login_Clicked"/>
    </StackLayout>
</ContentPage>